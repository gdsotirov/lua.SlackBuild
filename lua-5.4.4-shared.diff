diff -urNad lua-5.4.4-orig/src/Makefile lua-5.4.4/src/Makefile
--- lua-5.4.4-orig/src/Makefile	2021-07-15 17:01:52.000000000 +0300
+++ lua-5.4.4/src/Makefile	2022-03-19 17:13:46.213169572 +0200
@@ -33,18 +33,24 @@
 PLATS= guess aix bsd c89 freebsd generic linux linux-readline macosx mingw posix solaris
 
 LUA_A=	liblua.a
+LUA_SO= liblua.so
 CORE_O=	lapi.o lcode.o lctype.o ldebug.o ldo.o ldump.o lfunc.o lgc.o llex.o lmem.o lobject.o lopcodes.o lparser.o lstate.o lstring.o ltable.o ltm.o lundump.o lvm.o lzio.o
+CORE_PO=lapi.po lcode.po lctype.po ldebug.po ldo.po ldump.po lfunc.po lgc.po llex.po lmem.po lobject.po lopcodes.po lparser.po lstate.po lstring.po ltable.po ltm.po lundump.po lvm.po lzio.po
