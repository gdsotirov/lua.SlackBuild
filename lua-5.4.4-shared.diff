+BASE_PO=$(CORE_PO) $(LIB_PO) $(MYOBJS)
 
 LUA_T=	lua
 LUA_O=	lua.o
+LUA_PO= lua.po
 
 LUAC_T=	luac
 LUAC_O=	luac.o
