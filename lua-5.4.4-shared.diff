 ALL_A= $(LUA_A)
 
 # Targets start here.
@@ -56,19 +62,28 @@
 
 a:	$(ALL_A)
 
+%.o : %.c
+	$(CC) $(CFLAGS) -o $@ -c $<
+
+%.po : %.c
+	$(CC) $(CFLAGS) -fPIC -o $@ -c $<
+
 $(LUA_A): $(BASE_O)
 	$(AR) $@ $(BASE_O)
 	$(RANLIB) $@
 
-$(LUA_T): $(LUA_O) $(LUA_A)
+$(LUA_T): $(LUA_O) $(LUA_SO)
 	$(CC) -o $@ $(LDFLAGS) $(LUA_O) $(LUA_A) $(LIBS)
 
-$(LUAC_T): $(LUAC_O) $(LUA_A)
+$(LUAC_T): $(LUAC_O) $(LUA_SO)
 	$(CC) -o $@ $(LDFLAGS) $(LUAC_O) $(LUA_A) $(LIBS)
 
 test:
 	./$(LUA_T) -v
 
+$(LUA_SO): $(CORE_PO) $(LIB_PO)
+	$(CC) -o $@ -shared -lm -ldl $?
+
 clean:
 	$(RM) $(ALL_T) $(ALL_O)
 
