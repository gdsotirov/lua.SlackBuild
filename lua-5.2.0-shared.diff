 # Targets start here.
@@ -55,16 +61,26 @@
 
 a:	$(ALL_A)
 
+%.o : %.c
+	$(CC) $(CFLAGS) -o $@ -c $<
+
+%.po : %.c
+	$(CC) $(CFLAGS) -fPIC -o $@ -c $<
+
+
